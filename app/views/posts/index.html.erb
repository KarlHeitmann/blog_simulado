<h1 class="text-center">Blog de Costa Rica</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Titulo</th>
      <th scope="col">Contenido</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post[:titulo] %></th>
        <td><%= "#{post[:contenido][0..50]}..." %></td>
      </tr>
    <% end %>
  </tbody>
</table>
